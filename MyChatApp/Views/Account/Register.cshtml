
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@model RegisterDto

<div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form asp-controller="account" asp-action="register" method="post">
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                <p class="lead fw-normal mb-0 me-3">Sign up with</p>
                <button type="button" class="btn btn-primary btn-floating mx-1">
                    <i class="fab fa-facebook-f"></i>
                </button>

                <button type="button" class="btn btn-primary btn-floating mx-1">
                    <i class="fab fa-twitter"></i>
                </button>

                <button type="button" class="btn btn-primary btn-floating mx-1">
                    <i class="fab fa-linkedin-in"></i>
                </button>
            </div>

            <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0">Or</p>
            </div>

            @Html.AntiForgeryToken()
            <partial name="_NotificationPartial" />
            <div class="form-outline mb-4">
                <input type="text" id="form3Example3" asp-for="Username" class="form-control form-control-lg shadow-sm"
                       placeholder="Enter a valid User name" />
                <label class="form-label" asp-for="Username" for="form3Example3">User name</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-outline mb-3">
                <input type="tel" id="form3Example4" asp-for="Tel" class="form-control form-control-lg shadow-sm"
                       placeholder="Enter password" />
                <label class="form-label" asp-for="Tel" for="form3Example4">Password</label>
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <!-- Password input -->
            <div class="form-outline mb-3">
                <input type="password" id="form3Example4" asp-for="Password" class="form-control form-control-lg shadow-sm"
                       placeholder="Enter password" />
                <label class="form-label" asp-for="Password" for="form3Example4">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="text-center text-lg-start mt-4 pt-2">
                <button type="submit" class="btn btn-primary btn-lg"
                        style="padding-left: 2.5rem; padding-right: 2.5rem;">
                    Register
                </button>
                <p class="small fw-bold mt-2 pt-1 mb-0">
                    Do have an account? <a asp-controller="Account" asp-action="Login"
                                           class="link-danger">Login</a>
                </p>
            </div>

        </form>
    </div>
    <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png"
             class="img-fluid" alt="Sample image">
    </div>

</div>



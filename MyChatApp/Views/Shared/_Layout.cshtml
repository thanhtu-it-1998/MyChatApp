<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyChatApp</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/page.css">
</head>
<body>
    <div class="sidebar shadow">
        <div class="avatar position-relative">
            <img src="https://github.com/mdo.png" width="52" height="52" class="rounded-circle " alt="">
            <span class="position-absolute  start-100 translate-middle p-2 bg-danger border border-light rounded-circle">
                <span class="visually-hidden">New alerts</span>
            </span>
        </div>
        <br>
        <a asp-controller="SocialNetwork" asp-action="Index" class="room-button shadow-sm active"><i class="fas fa-home "></i></a>
        <a  asp-controller="Rooms" asp-action="Friends" class="room-button shadow-sm "><i class="far fa-address-book"></i></a>
        <a  asp-controller="Chats" asp-action="Index" class="room-button shadow-sm"><i class="far fa-comment-dots"></i></a>
        <a asp-controller="Account" asp-action="Logout" class="room-button shadow-sm"><i class="fas fa-sign-out-alt"></i></a>
    </div>
    <div class="main">
      @RenderBody()
    </div>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
</body>
</html>
